nav.nav
  .nav__button
    a.nav__button-show-menu_size_l(href='#')
      +svg('hamburger','svg-hamburger-dims')
  .nav__menu
    .nav__button
      a.nav__button-close_size_m(href='#')
        i.fa.fa-close
    ul(class='nav__list')
      each item in navItems
        li(class='nav__item')
          a(class='nav__link' href=item.href)= item.title